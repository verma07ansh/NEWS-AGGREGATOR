# News API Configuration
NEWS_API_KEY=your-news-api-key-here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# MongoDB Atlas Connection Details (for reference)
# Replace the following placeholders in MONGO_URI:
# <username> - Your MongoDB Atlas username
# <password> - Your MongoDB Atlas password
# <cluster-name> - Your cluster name (e.g., cluster0.abc123)
# <database-name> - Your database name (e.g., news_aggregator)

# Example:
# MONGO_URI=mongodb+srv://myuser:mypassword@cluster0.abc123.mongodb.net/news_aggregator?retryWrites=true&w=majority